<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.example.admin.testapp_21.MainActivity">

    <LinearLayout
        android:id="@+id/area1"
        android:layout_width="match_parent"
        android:layout_height="190dp"

        >

        <EditText
            android:id="@+id/data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:textColor="#ff0000"
            />
    </LinearLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/area1"
        android:columnCount="4"
        android:rowCount="5"
        android:layout_margin="0dp"

        >

        <Button
            android:id="@+id/jia"
            android:layout_height="75dp"
            android:layout_width="90dp"
            android:text="+"
            android:background="#ffffff"
            />
        <Button
            android:id="@+id/jian"
            android:layout_height="75dp"
            android:layout_width="90dp"
            android:text="-"
            android:background="#ffffff"
            />
        <Button
            android:id="@+id/cheng"
            android:layout_height="75dp"
            android:layout_width="90dp"
            android:background="#ffffff"
            android:text="*"
            />
        <Button
            android:id="@+id/qyu"
            android:layout_height="75dp"
            android:layout_width="90dp"
            android:text="/"
            android:background="#ffffff"
            />

        <Button
            android:id="@+id/one"
            android:layout_height="75dp"
            android:layout_width="90dp"
            android:text="1"
            android:background="#ffffff"
            />
        <Button
            android:id="@+id/two"
            android:layout_height="75dp"
            android:layout_width="90dp"
            android:text="2"
            android:background="#ffffff"
            />
        <Button
            android:id="@+id/three"
            android:layout_height="75dp"
            android:layout_width="90dp"
            android:text="3"
            android:background="#ffffff"
            />
        <Button
            android:id="@+id/del"
            android:layout_height="75dp"
            android:layout_width="90dp"
            android:text="DEL"
            android:background="#ffffff"
            />

        <Button
            android:id="@+id/four"
            android:layout_height="75dp"
            android:layout_width="90dp"
            android:text="4"
            android:background="#ffffff"
            />
        <Button
            android:id="@+id/five"
            android:layout_height="75dp"
            android:layout_width="90dp"
            android:text="5"
            android:background="#ffffff"
            />
        <Button
            android:id="@+id/six"
            android:layout_height="75dp"
            android:layout_width="90dp"
            android:text="6"
            android:background="#ffffff"
            />
        <Button
            android:id="@+id/zero"
            android:layout_height="75dp"
            android:layout_width="90dp"
            android:text="0"
            android:background="#ffffff"
            />

        <Button
            android:id="@+id/seven"
            android:layout_height="75dp"
            android:layout_width="90dp"
            android:text="7"
            android:background="#ffffff"
            />
        <Button
            android:id="@+id/eight"
            android:layout_height="75dp"
            android:layout_width="90dp"
            android:text="8"
            android:background="#ffffff"
            />
        <Button
            android:id="@+id/nine"
            android:layout_height="75dp"
            android:layout_width="90dp"
            android:text="9"
            android:background="#ffffff"
            />
        <Button
            android:id="@+id/sin"
            android:layout_height="75dp"
            android:layout_width="90dp"
            android:text="sin"
            android:background="#ffffff"
            />
        <Button
            android:id="@+id/clr"
            android:layout_height="75dp"
            android:layout_width="180dp"
            android:layout_columnSpan="2"
            android:text="CLEAR"
            android:textColor="#ff0000"
            android:background="#ffffff"
            />
        <Button
            android:id="@+id/eql"
            android:layout_height="75dp"
            android:layout_width="180dp"
            android:layout_columnSpan="2"
            android:text="="
            android:textColor="#ff0000"
            android:background="#ffffff"
            />



    </GridLayout>



</RelativeLayout>
